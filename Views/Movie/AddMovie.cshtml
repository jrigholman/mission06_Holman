@model Mission06_Holman.Models.Movie

@{
    ViewData["Title"] = "Add Movie";
}

<h2 class="text-center">Add a New Movie</h2>

<form asp-action="AddMovie" method="post" class="p-4 border rounded bg-light">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Year</label>
        <input asp-for="Year" class="form-control" type="number" min="1888" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Director</label>
        <input asp-for="Director" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Rating</label>
        <select asp-for="Rating" class="form-select">
            <option>G</option>
            <option>PG</option>
            <option>PG-13</option>
            <option>R</option>
        </select>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="Edited" class="form-check-input" type="checkbox" />
        <label class="form-check-label">Edited</label>
    </div>

    <div class="mb-3">
        <label class="form-label">Category</label>
        <input asp-for="CategoryId" class="form-control" required />
    </div>

    <div class="mb-3 form-check">
        <input asp-for="CopiedToPlex" class="form-check-input" type="checkbox" />
        <label class="form-check-label">Copied to Plex</label>
    </div>

    <div class="mb-3">
        <label class="form-label">Notes</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Add Movie</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
