@model Mission06_Holman.Models.Movie

@{
    ViewData["Title"] = "Add a Movie";
}

<h2>Add a New Movie</h2>

<form asp-action="AddMovie" method="post">
    <div class="form-group">
        <label>Title:</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Category:</label>
        <input asp-for="Category" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Director:</label>
        <input asp-for="Director" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Year:</label>
        <input asp-for="Year" class="form-control" type="number" required />
    </div>

    <div class="form-group">
        <label>Rating:</label>
        <select asp-for="Rating" class="form-control" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div class="form-group form-check">
    <input asp-for="Edited" class="form-check-input" />
    <label class="form-check-label">Edited</label>
</div>


    <div class="form-group">
        <label>Lent To:</label>
        <input asp-for="LentTo" class="form-control" />
    </div>

    <div class="form-group">
        <label>Notes (Max 25 characters):</label>
        <input asp-for="Notes" class="form-control" maxlength="25" />
    </div>

    <button type="submit" class="btn btn-primary">Add Movie</button>
</form>
