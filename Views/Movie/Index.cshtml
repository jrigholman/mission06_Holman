@model IEnumerable<Mission06_Holman.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<h2 class="text-center">Joel Hilton Movie Collection</h2>

<div class="text-center mb-3">
    <a asp-controller="Movie" asp-action="AddMovie" class="btn btn-primary">Add Movie</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Director</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Category</th>
            <th>Copied To Plex</th>
            <th>Actions</th> <!-- New Actions Column -->
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Year</td>
                    <td>@movie.Director</td>
                    <td>@movie.Rating</td>
                    <td>@(movie.Edited ? "Yes" : "No")</td>
                    <td>@movie.CategoryId</td>
                    <td>@(movie.CopiedToPlex ? "Yes" : "No")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@movie.MovieId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="DeleteMovie" asp-route-id="@movie.MovieId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center">No movies found.</td>
            </tr>
        }
    </tbody>
</table>
