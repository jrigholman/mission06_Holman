@model Mission06_Holman.Models.Movie

<h2>Edit Movie</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MovieId" /> <!-- Hidden ID for tracking -->

    <div class="mb-3">
        <label class="form-label">Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Year</label>
        <input asp-for="Year" class="form-control" type="number" min="1888" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Director</label>
        <input asp-for="Director" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Rating</label>
        <select asp-for="Rating" class="form-select">
            <option>G</option>
            <option>PG</option>
            <option>PG-13</option>
            <option>R</option>
            <option>NR</option>
            <option>TV-Y7</option>
            <option>TV-14</option>
            <option>TV-PG</option>
            <option>UR</option>
        </select>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="Edited" class="form-check-input" type="checkbox" />
        <label class="form-check-label">Edited</label>
    </div>

    <div class="form-group">
        <label for="CategoryId">Category</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
            <option value="">-- Select a Category --</option>
        </select>
    </div>




    <div class="mb-3 form-check">
        <input asp-for="CopiedToPlex" class="form-check-input" type="checkbox" />
        <label class="form-check-label">Copied to Plex</label>
    </div>

    <div class="form-group">
        <label asp-for="LentTo" class="control-label"></label>
        <input asp-for="LentTo" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Notes</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>






    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
