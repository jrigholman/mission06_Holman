@model Mission06_Holman.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<h2 class="text-danger text-center">Are you sure you want to delete this movie?</h2>

<div class="p-3 border rounded bg-light">
    <h4>@Model.Title (@Model.Year)</h4>
    <p><strong>Director:</strong> @Model.Director</p>
    <p><strong>Rating:</strong> @Model.Rating</p>
    <p><strong>Category:</strong> @Model.CategoryId</p>

    <form asp-action="DeleteMovie" method="post">
        <input type="hidden" asp-for="MovieId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
